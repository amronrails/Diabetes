<p id="notice"><%= notice %></p>

<h1>Listing Patients</h1>

<table>
  <thead>
    <tr>
      <th>Doctor</th>
      <th>Name</th>
      <th>Age</th>
      <th>Sex</th>
      <th>Dose</th>
      <th>Alarm1</th>
      <th>Alarm2</th>
      <th>Alarm3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.doctor_id %></td>
        <td><%= patient.name %></td>
        <td><%= patient.age %></td>
        <td><%= patient.sex %></td>
        <td><%= patient.dose %></td>
        <td><%= patient.alarm1 %></td>
        <td><%= patient.alarm2 %></td>
        <td><%= patient.alarm3 %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

